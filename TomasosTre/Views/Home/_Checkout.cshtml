
<h2>Checkout</h2>

<button class="btn btn-success">Log in for skip this form</button>

<div class="">
    <h3>Payment credentials</h3> <!-- Tooltip explaining this is not saved -->
    <div class="form-group">
        <label for="">Card Number</label>
        <input type="text" value="1234 1234 1234 1234" />
    </div>
    <div class="form-group">
        <label for="">Security Number</label>
        <input type="number" value="123" />
    </div>
    <div class="form-group">
        <label for="">Expiry Date: Month</label>
        <input type="number" min="1" max="12" value="@DateTime.Now.Month" />
    </div>
    <div class="form-group">
        <label for="">Expiry Date: Year</label>
        <input type="email" min="2000" max="2999" value="@DateTime.Now.Year" />
    </div>
</div>

<div class="">
    <h3>Delivery info</h3>
    <div class="form-group">
        <label for="">Address</label>
        <input type="text" value="Adress"/>
    </div>
    <div class="form-group">
        <label for="">Address</label>
        <input type="number" value="Zip"/>
    </div>
    <div class="form-group">
        <label for="">Address</label>
        <input type="text" value="City"/>
    </div>
    <div class="form-group">
        <label for="">Address</label>
        <input type="email" value="E-Mail"/>
